<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginLeft="@dimen/pad_15dp"
                                             android:layout_marginTop="@dimen/pad_10dp"
                                             android:layout_marginRight="@dimen/pad_15dp"
                                             android:layout_marginBottom="@dimen/pad_5dp"
                                             android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView android:layout_width="60dp"
                       android:layout_gravity="center"
                       android:layout_marginLeft="5dp"
                       android:src="@drawable/ic_heart_grey600_36dp"
                       android:id="@+id/fragment_item_details__imageview_favorite"
                       android:layout_height="60dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/fragment_item_details__textview_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_15dp"
                        android:layout_marginTop="@dimen/pad_5dp"
                        tools:text="info 1"
                        android:layout_marginBottom="@dimen/pad_10dp"
                        android:textSize="@dimen/txt_18sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/fragment_item_details__textview_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/pad_15dp"
                        android:layout_marginTop="@dimen/pad_5dp"
                        android:textColor="@color/colorSecondaryDark"
                        android:layout_marginBottom="@dimen/pad_10dp"
                        tools:text="info 1"
                        android:textSize="@dimen/txt_16sp"/>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
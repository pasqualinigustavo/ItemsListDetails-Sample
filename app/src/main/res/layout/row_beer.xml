<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/row_beer__container"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:descendantFocusability="blocksDescendants">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal">

        <ImageView android:layout_width="60dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="5dp"
                   android:focusable="false"
                   android:src="@drawable/ic_heart_grey600_36dp"
                   android:id="@+id/row_beer__imageview_favorite"
                   android:layout_height="60dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:focusable="false"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/row_beer__textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:layout_marginLeft="@dimen/pad_15dp"
                    android:layout_marginTop="@dimen/pad_5dp"
                    tools:text="info 1"
                    android:layout_marginBottom="@dimen/pad_10dp"
                    android:textSize="@dimen/txt_18sp"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/row_beer__textview_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:focusable="false"
                    android:layout_marginLeft="@dimen/pad_15dp"
                    android:layout_marginTop="@dimen/pad_5dp"
                    android:lines="3"
                    android:ellipsize="end"
                    android:textColor="@color/colorSecondaryDark"
                    android:layout_marginBottom="@dimen/pad_10dp"
                    tools:text="info 1"
                    android:textSize="@dimen/txt_16sp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>